            {{ form_label(form.photoPath, "Image Actuelle du compte ",  { 'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'} }) }}
        </div>
        <img src="{{ user.photoPath }}" class="md:w-56 w-36 rounded-lg shadow-lg " alt="Avatar">
