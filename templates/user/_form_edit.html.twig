            <div class="text-danger">{{ form_errors(form.username) }} </div>
        </div>
    </div>
    <div>
        <div class="flex items-center justify-center">
            {{ form_label(form.email, "Adresse email",  { 'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'} }) }}
        </div>
        <div class="mt-2">
            {{ form_widget(form.email,  { 'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-accent placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary2 sm:text-sm sm:leading-6'} }) }}
            <div class="text-danger">{{ form_errors(form.email) }}</div>
        </div>
    </div>
    <div>
        <div class="flex items-center justify-center">
            {{ form_label(form.firstName, "Pr√©nom",  { 'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'} }) }}
